<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="android:fontFamily">@font/default_font</item>
    <item name="android:screenOrientation">userPortrait</item>
  </style>

  <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="android:screenOrientation">userPortrait</item>
  </style>

  <style name="settingsText">
    <item name="drawableTint">@color/black</item>
    <item name="android:layout_marginTop">0.5dp</item>
    <item name="android:background">@color/white</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@color/titleTextColor</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:drawablePadding">20dp</item>
    <item name="android:height">60dp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingLeft">10dp</item>
  </style>

  <style name="CustomTabLayout">
    <item name="tabMode">fixed</item>
    <item name="android:background">@color/white</item>
    <item name="tabSelectedTextColor">@color/titleTextColor</item>
    <item name="tabTextAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
    <item name="tabTextColor">@color/gray</item>
  </style>

  <style name="StyleTextTabMode" parent="@android:style/TextAppearance.Widget.TabWidget">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="RestaurantCategoryTabMode" parent="@android:style/TextAppearance.Widget.TabWidget">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/titleTextColor</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="StyleTextTabModeBold" parent="StyleTextTabMode">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="android:windowBackground">@drawable/layout_border_item_size10</item>
  </style>

  <style name="TitleTextInput">
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:textColor">@color/titleTextColor</item>
    <item name="android:textSize">15sp</item>
    <item name="android:maxLines">1</item>
    <item name="android:layout_marginTop">10dp</item>
  </style>

  <style name="BottomNavigationStyle">
    <item name="android:textSize">@dimen/bottom_navigation_active_text_size</item>
    <item name="android:padding">0dp</item>
    <item name="textAllCaps">false</item>
  </style>

  <style name="ItemSetting">
    <item name="android:textColor">@color/titleTextColor</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:maxLines">1</item>
    <item name="android:drawableEnd">@drawable/icon_arrow_right</item>
    <item name="android:drawablePadding">20dp</item>
    <item name="android:height">65dp</item>
    <item name="android:layout_marginTop">1dp</item>
    <item name="android:background">@color/white</item>
    <item name="android:paddingHorizontal">20dp</item>
  </style>

  <style name="TranslucentStatus" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowContentOverlay">@null</item>
    <item name="windowActionBarOverlay">true</item>
    <item name="colorPrimary">@android:color/transparent</item>
    <item name="windowActionBar">false</item>
    <item name="android:statusBarColor">#00FFFFFF</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:windowContentTransitions">true</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:fontFamily">@font/default_font</item>
    <item name="android:screenOrientation">userPortrait</item>
  </style>

  <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/layout_border_top</item>
  </style>

  <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
    <item name="android:windowIsFloating">true</item>
    <item name="bottomSheetStyle">@style/BottomSheet</item>
  </style>

  <style name="FilterBottomSheetDialog" parent="BaseBottomSheetDialog">
    <item name="android:windowIsFloating">true</item>
  </style>

  <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

  <style name="CustomSearchView">
    <item name="searchHintIcon">@null</item>
    <item name="searchIcon">@null</item>
    <item name="android:textColorHint">@color/gray</item>
    <item name="android:textColor">@color/gray</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:textSize">15sp</item>
    <item name="android:backgroundTint">@color/whitesmoke</item>
    <item name="android:background">@drawable/layout_border_item_size5</item>
    <item name="android:layout_marginLeft">60dp</item>
    <item name="android:paddingLeft">10dp</item>
  </style>

  <style name="ButtonStyle">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">16.5sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:background">@drawable/layout_border_item_size5</item>
    <item name="android:backgroundTint">@color/green</item>
    <item name="android:layout_height">50dp</item>
  </style>
</resources>
