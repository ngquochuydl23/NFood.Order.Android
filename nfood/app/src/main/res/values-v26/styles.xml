<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="android:fontFamily">@font/default_font</item>
    <item name="android:statusBarColor">@color/white</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:screenOrientation">userPortrait</item>
  </style>

  <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="itemTextColor">@color/white</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="android:statusBarColor">@color/white</item>
    <item name="android:navigationBarColor">@color/white</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:screenOrientation">userPortrait</item>
  </style>

  <style name="CustomSearchView">
    <item name="searchHintIcon">@null</item>
    <item name="searchIcon">@null</item>
    <item name="android:textColorHint">@color/gray</item>
    <item name="android:textColor">@color/gray</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:textSize">15sp</item>
    <item name="android:backgroundTint">@color/whitesmoke</item>
    <item name="android:background">@drawable/layout_border_item_size5</item>
    <item name="android:layout_marginLeft">60dp</item>
    <item name="android:paddingLeft">10dp</item>
  </style>


</resources>